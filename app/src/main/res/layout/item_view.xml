<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="10dp"
    android:elevation="10dp"
    app:cardCornerRadius="10dp">

    <View
        android:id="@+id/viewColorTag"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="5dp"
        android:background="@color/white"
        android:layout_marginStart="5dp"
        android:layout_marginBottom="5dp">

        <RelativeLayout
            android:background="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:layout_marginEnd="5dp"
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvTitle"
                android:ellipsize="end"
                android:text="Task Title"
                android:textSize="20sp"
                android:textStyle="bold"
                android:maxLines="1"
                android:layout_alignParentStart="true"
                android:layout_alignStart="@+id/tvCategory"
                android:textColor="#303030"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tvTitleDesc"
                android:ellipsize="end"
                android:text="Title Desc"
                android:textSize="16sp"
                android:maxLines="1"
                android:layout_marginTop="4dp"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/tvTitle"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tvCategory"
                android:ellipsize="end"
                android:text="Meeting"
                android:textSize="15sp"
                android:maxLines="1"
                android:maxWidth="80dp"
                android:layout_marginEnd="4dp"
                android:layout_alignParentEnd="true"
                android:textColor="@color/litherGray"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
            android:id="@+id/tvDateText"
            android:ellipsize="end"
            android:text="Date"
            android:textSize="12sp"
            android:layout_marginEnd="4dp"
            android:layout_marginTop="15dp"
            android:layout_alignParentStart="true"
            android:layout_below="@id/tvTitleDesc"
            android:textColor="@color/litherGray"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tvTimeText"
                android:ellipsize="end"
                android:text="Time"
                android:textSize="12sp"
                android:layout_marginEnd="4dp"
                android:layout_marginTop="15dp"
                android:layout_alignParentEnd="true"
                android:layout_below="@id/tvTitleDesc"
                android:textColor="@color/litherGray"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tvDate"
                android:ellipsize="end"
                android:text="27-02-2022"
                android:textSize="12sp"
                android:layout_marginEnd="4dp"
                android:layout_marginTop="4dp"
                android:layout_alignParentStart="true"
                android:layout_below="@id/tvDateText"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tvTime"
                android:ellipsize="end"
                android:text="12:44 PM"
                android:textSize="12sp"
                android:layout_marginEnd="4dp"
                android:layout_marginTop="4dp"
                android:layout_alignParentEnd="true"
                android:layout_below="@id/tvTimeText"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </RelativeLayout>

    </RelativeLayout>

</com.google.android.material.card.MaterialCardView>